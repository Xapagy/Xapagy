// --------------------------------------------
// DA: DaShmLinkStructure
// This is a bit of a special case, because these
// values differ from scene to scene so they are not 
// really attached to the DA
// --------------------------------------------
$DiffusionActivity AppendTo "ShadowMaintenance" New DA "com.xapagy.activity.shadowmaintenance.DaShmLinkStructure"
// DaShmLinkStructure - the weight attached to ANSWER links
$SetParameter A_SHM/G_LINK_STRUCTURE/N_WEIGHTAnswer=0.0
// DaShmLinkStructure - the weight attached to COINCIDENCE links
$SetParameter A_SHM/G_LINK_STRUCTURE/N_WEIGHTCoincidence=10.0
// DaShmLinkStructure - the weight attached to PREDECESSOR links
$SetParameter A_SHM/G_LINK_STRUCTURE/N_WEIGHTReverse:Successor=10.0
// DaShmLinkStructure - the weight attached to SUCCESSOR links
$SetParameter A_SHM/G_LINK_STRUCTURE/N_WEIGHTSuccessor=10.0
// DaShmLinkStructure - the weight attached to IR_CONTEXT links
$SetParameter A_SHM/G_LINK_STRUCTURE/N_WEIGHTIRContext=0.0
// DaShmLinkStructure - the weight attached to IR_CONTEXT_IMPLICATION links
$SetParameter A_SHM/G_LINK_STRUCTURE/N_WEIGHTReverse:IRContext=0.0
// DaShmLinkStructure - the weight attached to QUESTION links
$SetParameter A_SHM/G_LINK_STRUCTURE/N_WEIGHTReverse:Answer=0.0
// --------------------------------------------
// DA: DaShmEnergyConversion
// --------------------------------------------
$DiffusionActivity AppendTo "ShadowMaintenance" New DA "com.xapagy.activity.shadowmaintenance.DaShmEnergyConversion", "S_SHV_TEMPORAL_ORDER_TO_E_SHV_GENERIC" = "1.0", "S_SHV_ACTION_MATCH_TO_E_SHV_GENERIC" = "1.0", "S_SHI_ATTRIBUTE_TO_E_SHI_GENERIC" = "1.0", "S_SHI_RELATION_TO_E_SHI_GENERIC" = "1.0", "S_SHI_ACTION_TO_E_SHI_GENERIC" = "1.0"
// --------------------------------------------
// DA: DaShmGarbageCollect
// --------------------------------------------
$DiffusionActivity AppendTo "ShadowMaintenance" New DA "com.xapagy.activity.shadowmaintenance.DaShmGarbageCollect", "beta" = "0.01", "inflectionPopulation" = "10.0", "safeEnergy" = "0.001"
// --------------------------------------------
// DA DaShmDecay
// --------------------------------------------
$DiffusionActivity AppendTo "ShadowMaintenance" New DA "com.xapagy.activity.shadowmaintenance.DaShmDecay", "ISh_Mult_SHI_GENERIC" = "0.9", "ISh_Mult_SHI_ATTRIBUTE" = "0.9", "ISh_Mult_SHI_RELATION" = "0.9", "ISh_Mult_SHI_ACTION" = "0.9", "ViSh_Mult_SHV_ACTION_MATCH" = "0.9",  "ViSh_Mult_SHV_GENERIC" = "0.7", "ViSh_Mult_SHV_TEMPORAL_ORDER" = "0.3"
